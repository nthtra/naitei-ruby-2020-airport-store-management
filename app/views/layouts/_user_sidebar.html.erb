<aside class="main-sidebar sidebar-dark-primary elevation-4">
  <a href="#" class="brand-link">
    <%= image_tag "/images/AdminLTELogo.png",
        class: "brand-image img-circle elevation-3",
        style:"opacity: .8" %>
    <span class="brand-text font-weight-light"> <%= t ".airport_store" %> </span>
  </a>
  <div class="sidebar">
    <% if logged_in? %>
    <div class="user-panel mt-3 pb-3 mb-3 d-flex">
      <div class="image">
        <%= image_tag "/images/weezer.jpg", class: "img-circle elevation-2" %>
      </div>
      <div class="info">
        <%= link_to "#", class: "d-block" do %>
          <% current_user.name %>
        <% end %>
      </div>
    </div>
    <% end %>
    <nav class="mt-2">
      <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-plane"></i>
            <p>
              <%= t ".terminals" %>
              <i class="right fas fa-angle-left"></i>
            </p>
          <% end %>
          <ul class="nav nav-treeview">
            <% Terminal.all.each do |terminal| %>
              <li class="nav-item">
                <%= link_to terminal, class: "nav-link" do %>
                  <i class="fas fa-globe nav-icon"></i>
                  <p><%= t ".terminal" %> <%= terminal.name %></p>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
          <i class="nav-icon fas fa-chart-bar"></i>
            <p>
              <%= t ".references" %>
            </p>
          <% end %>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-store"></i>
              <p>
                <%= t ".my_stores" %>
              </p>
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to "#", class: "nav-link" do %>
            <i class="nav-icon fas fa-file-alt"></i>
              <p>
                <%= t ".requests" %>
              </p>
            <% end %>
        <% end %>
      </ul>
    </nav>
  </div>
</aside>
